{
    "name": "Fake ID Sharing",
    "description": "Sharing Fake IDs to protect your privacy.",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "16": "/img/logo16.ico",
        "32": "/img/logo32.ico",
        "48": "/img/logo48.ico",
        "128": "/img/logo128.ico"
    },
    "permissions": [
        "tabs",
        "background"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }